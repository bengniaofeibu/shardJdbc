<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.thz.shareding.dao.UserMapper">
  <resultMap id="BaseResultMap" type="com.thz.shareding.dto.User">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="name" jdbcType="VARCHAR" property="name" />
    <result column="age" jdbcType="BIGINT" property="age" />

    <collection property="address" ofType="com.thz.shareding.dto.Address">
      <id column="id" jdbcType="BIGINT" property="id" />
      <result column="user_id" jdbcType="BIGINT" property="userId" />
      <result column="address" jdbcType="VARCHAR" property="address" />
    </collection>
  </resultMap>


  <select id="getUserInfo" resultType="com.thz.shareding.dto.User" resultMap="BaseResultMap">
    select * from t_user u left join t_address a on u.id = a.user_id where u.id = #{id,jdbcType=BIGINT}
  </select>
</mapper>